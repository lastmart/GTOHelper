<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/disciplinesListFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.gtohelper.presentation.ui.main.MainFragment"
        android:label="Выберите таблицу"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_mainFragment_to_tablePreviewDetailsDialogFragment"
            app:destination="@id/tablePreviewDetailsDialogFragment" />
        <action
            android:id="@+id/action_mainFragment_to_competitionCreationFragment"
            app:destination="@id/competitionCreationFragment" />
        <action
            android:id="@+id/action_mainFragment_to_helpFragment"
            app:destination="@id/helpFragment" />
    </fragment>
    <dialog
        android:id="@+id/tablePreviewDetailsDialogFragment"
        android:name="com.gtohelper.presentation.ui.main.TablePreviewDetailsDialogFragment"
        android:label="TablePreviewDetailsDialogFragment" >
        <action
            android:id="@+id/action_tablePreviewDetailsDialogFragment_to_competitorsResultsFragment"
            app:destination="@id/competitorsResultsFragment" />
    </dialog>
    <fragment
        android:id="@+id/competitorsResultsFragment"
        android:name="com.gtohelper.presentation.ui.competitors_results.CompetitorsResultsFragment"
        android:label="Результаты"
        tools:layout="@layout/fragment_competitors_results" />
    <fragment
        android:id="@+id/competitorsListFragment"
        android:name="com.gtohelper.presentation.ui.competitors_list.CompetitorsListFragment"
        android:label="Список участников"
        tools:layout="@layout/fragment_competitors_list" />
    <fragment
        android:id="@+id/disciplinesListFragment"
        android:name="com.gtohelper.presentation.ui.disciplines_list.DisciplinesListFragment"
        android:label="Название команды"
        tools:layout="@layout/fragment_disciplines_list" >
        <action
            android:id="@+id/action_disciplinesListFragment_to_deleteDisciplineDialogFragment"
            app:destination="@id/deleteDisciplineDialogFragment" />
        <action
            android:id="@+id/action_disciplinesListFragment_to_deleteCompetitionDialogFragment"
            app:destination="@id/deleteCompetitionDialogFragment" />
    </fragment>
    <dialog
        android:id="@+id/deleteDisciplineDialogFragment"
        android:name="com.gtohelper.presentation.ui.disciplines_list.delete_discpiline.DeleteDisciplineDialogFragment"
        android:label="DeleteDisciplineDialogFragment" />
    <dialog
        android:id="@+id/deleteCompetitionDialogFragment"
        android:name="com.gtohelper.presentation.ui.disciplines_list.delete_competition.DeleteCompetitionDialogFragment"
        android:label="DeleteCompetitionDialogFragment" />
    <fragment
        android:id="@+id/competitionCreationFragment"
        android:name="com.gtohelper.presentation.ui.competition_creation.CompetitionCreationFragment"
        android:label="fragment_competition_creation"
        tools:layout="@layout/fragment_competition_creation" />
    <fragment
        android:id="@+id/helpFragment"
        android:name="com.gtohelper.presentation.ui.help.HelpFragment"
        android:label="fragment_help"
        tools:layout="@layout/fragment_help" />
</navigation>